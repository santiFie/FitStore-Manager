
<% content_for :title, "Usuarios" %>

<% if flash[:notice] %>
    <div class="alert alert-success text-center">
        <%= flash[:notice] %>
    </div>
<% elsif flash[:alert] %>
    <div class="alert alert-danger text-center">
        <%= flash[:alert] %>
    </div>
<% end %>

<h1 class="text-center my-4">Usuarios</h1>


<div class="text-center my-4">
  <%= link_to "Nuevo usuario", new_user_path, class: "btn btn-primary btn-sm" %>
</div>

<div id="users" class="user-list">
  <% if @users.any? %>
    <% @users.each do |user| %>
      <% next if user == current_user %>
      <div class="user-card shadow p-4 mb-5 bg-white rounded">
        <p>
          <strong>Nombre de usuario:</strong> <%= user.username %>
        </p>
        <p>
          <strong>Email:</strong> <%= user.email %>
        </p>
        <p>
          <strong>Rol:</strong> <%= user.role %>
        </p>
        <p>
          <strong>Fecha de inicio:</strong> <%= user.start_date %>
        </p>
        <p>
          <strong>Teléfono:</strong> <%= user.phone %>
        </p>
        <div class="user-actions">
          <% if can?(:edit, user) %>
            <%= link_to "Editar", edit_user_path(user), class: "btn btn-primary btn-sm" %>
          <% end %>
          <% if can?(:destroy, user) %>
            <%= link_to "Eliminar", user, data: { turbo_method: :delete, confirm: "¿Estas seguro?" }, class: "btn btn-danger btn-sm" %>
          <% end %>
          <% if can?(:block, user.role) %>
            <% if !user.blocked? %>
          <%= link_to "Bloquear", block_user_path(user), data: { turbo_method: :patch }, class: "btn btn-warning btn-sm" %>
            <% else %>
          <%= link_to "Desbloquear", unblock_user_path(user), data: { turbo_method: :patch }, class: "btn btn-success btn-sm" %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>No hay usuarios registrados.</p>
  <% end %>
</div>


<style>
  .alert-success {
    background-color: #d4edda;
    border: 1px solid #c3e6cb;
    color: #155724;
    padding: 1rem;
    border-radius: 6px;
    margin-bottom: 1.5rem;
  }

  .user-list {
    max-width: 800px;
    margin: 0 auto;
  }

  .user-card {
    padding: 1.5rem;
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
    margin-bottom: 1.5rem;
    font-family: Arial, sans-serif;
  }

  .user-actions {
    margin-top: 1rem;
  }

  .btn-sm {
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    border-radius: 4px;
    font-family: Arial, sans-serif;
    text-decoration: none;
  }

  .btn-warning {
    background-color: #ffc107;
    color: white;
  }

  .btn-warning:hover {
    background-color: #e0a800;
  }

  .btn-danger {
    background-color: #dc3545;
    color: white;
  }

  .btn-danger:hover {
    background-color: #c82333;
  }

  .btn-success {
    background-color: #28a745;
    color: white;
  }

  .btn-success:hover {
    background-color: #218838;
  }

  .btn-primary {
    background-color: #28a745;
    color: white;
  }

  .btn-primary:hover {
    background-color: #218838;
  }
</style>
