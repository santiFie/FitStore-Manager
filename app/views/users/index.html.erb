<p style="color: green"><%= notice %></p>

<% content_for :title, "Users" %>

<h1>Users</h1>

<div id="users">
  <% @users.each do |user| %>
    <%= render user %>
    <p>
      <%= link_to "Show this user", user %>
    </p>
    <div>
      <%= link_to "Editar", edit_user_path(user) %>
      <%= link_to "Eliminar", user, data: { turbo_method: :delete, confirm: "Â¿Estas seguro?" } %>
      <% if !user.blocked? %>
        <%= link_to "Bloquear", block_user_path(user) %>
      <% else %>
        <%= link_to "Desbloquear", unblock_user_path(user) %>
      <% end %>
    </div>
  <% end %>
</div>

<%= link_to "New user", new_user_path %>
